@import './variable.styl';

body, html {
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback';
  color: $color-text;
  background: $color-background;
  font-size: $font-size-medium;
  height: 100%
}

.is-component {
  overflow: hidden;
}
.h-100
  height: 100%
.base-content {
  box-sizing: border-box;
  padding: 20px;
  max-width: $inner-width;
  width: 100%;
  margin: 20px auto;
  background: #fff;
  border-radius: 5px;
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
}
.px-10{
  padding-left: 10px;
  padding-right: 10px;  
}
.px-20{
  padding-left: 20px;
  padding-right: 20px;  
}
.mt-20{
  margin-top: 20px;
}
#app
  height: 100%

.el-breadcrumb__inner
  font-weight: 400 !important
.el-card
  margin-bottom: 20px
.el-card__header
  padding: 10px 20px

.menu-title
  height: 28px
  line-height: 28px

.el-menu
  border-right: none 
